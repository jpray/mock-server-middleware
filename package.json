{
  "name": "mock-server-middleware",
  "version": "0.4.0-alpha.4",
  "description": "A connect middleware of mock server to help develop web app.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "cross-env NODE_ENV=test mocha --es_staging --recursive -R nyan tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/whitetrefoil/mock-server-middleware.git"
  },
  "keywords": [
    "mock",
    "server",
    "connect",
    "middleware"
  ],
  "author": "WhiteTrefoil <whitetrefoil@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/whitetrefoil/mock-server-middleware/issues"
  },
  "homepage": "https://github.com/whitetrefoil/mock-server-middleware#readme",
  "devDependencies": {
    "@types/chalk": "^0.4.31",
    "@types/clear-require": "^2.0.0",
    "@types/connect": "^3.4.31",
    "@types/jest": "^21.1.0",
    "@types/lodash": "^4.14.74",
    "@types/node": "^8.0.30",
    "connect": "^3.6.5",
    "cross-env": "^5.0.5",
    "istanbul": "^0.4.5",
    "jest": "^21.1.0",
    "ts-jest": "^21.0.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  },
  "dependencies": {
    "clear-require": "^2.0.0",
    "chalk": "^2.1.0",
    "lodash": "^4.17.4",
    "strip-json-comments": "^2.0.1"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!**/*.d.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/~.*"
    ],
    "coverageDirectory": "test_results",
    "coverageReporters": [
      "clover",
      "lcov",
      "text-summary"
    ],
    "globals": {
      "ts-jest": {
        "skipBabel": false,
        "useBabelrc": false
      }
    },
    "mapCoverage": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.[jt]sx?$",
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  }
}
